@using Microsoft.AspNetCore.Identity;
@using StackOverflow.DAL.Entities.Membership;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-action="Ask" asp-controller="Question" asp-area="Admin" class="nav-link">
            <i class="nav-icon fas fa-th"></i>
            <p>
                Ask A Questions
            </p>
        </a>
    </li>
    <li class="nav-item">
        <form asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" }) class="nav-link">
            <button type="submit">
                <i class="nav-icon fas fa-th"></i>
                Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-action="Login" asp-controller="Account" asp-area="" class="nav-link">
            <i class="nav-icon fas fa-th"></i>
            Login
        </a>
    </li>
}
