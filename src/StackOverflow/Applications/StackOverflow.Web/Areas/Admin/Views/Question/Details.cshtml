@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model QuestionEditModel

@{
    ViewData["Title"] = "QA";
    var question = TempData["Student"] as QuestionEditModel;
}

@section Styles
    {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
<div>
   <form>
       <input asp-for="Id" />
   </form>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">DataTable with default features</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="qas" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>VoteCount</th>
                            <th>TimeStamp</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Description</th>
                            <th>VoteCount</th>
                            <th>TimeStamp</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<partial name="_ModalPartial" />

@section Scripts
    {
    <!-- DataTables -->
    <script src="~/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

    <script>
        $(function () {
            $('#qas').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/admin/answer/getanswers"                    
                },
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 3,
                        "render": function (data, type, row) {
                            return `<button type="submit" class="btn btn-primary btn-sm" onclick="window.location.href='/admin/answer/edit/${data}'" value='${data}'>
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Edit
                                            </button>
                                            <button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/admin/answer/voteup/${data}'" value='${data}'>
                                                <i class="fas fa-thumbs-up">
                                                </i>
                                                Vote Up
                                            </button>
                                            <button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/admin/answer/votedown/${data}'" value='${data}'>
                                                <i class="fas fa-thumbs-down">
                                                </i>
                                                Vote Down
                                            </button>
                                            <button type="submit" class="btn btn-danger btn-sm show-bs-modal" data-id='${data}' value='${data}'>
                                                <i class="fas fa-trash">
                                                </i>
                                                Delete
                                            </button>`;
                        }
                    }
                ]
            });

            $('#qas').on('click', '.show-bs-modal', function (event) {
                var id = $(this).data("id");
                var modal = $("#modal-default");
                modal.find('.modal-body p').text('Are you sure you want to delete this question?');
                $("#deleteId").val(id);
                $("#deleteForm").attr("action", "/admin/answer/delete");
                modal.modal('show');
            });

            $("#deleteButton").click(function () {
                $("#deleteForm").submit();
            });

        });
    </script>
}

